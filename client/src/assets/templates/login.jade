doctype
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title Login
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='vendor/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='assets/stylesheets/login.css')
    body
        div.container(ng-app='components.login')
            form.form-login(ng-controller='loginController')
                h2.form-login-heading Please login
                label.sr-only(for='inputName') Name
                input.form-control(type='text', id='inputName', placeholder='Name', autofocus, required, ng-model='username')
                label.sr-only(for='inputPassword') Password
                input.form-control(type='password', id='inputPassword', placeholder='Password',required, ng-model='password')
                button.btn.btn-lg.btn-primary.btn-block(ng-click='login(username, password)') Login
        script(src='assets/scripts/init.js')
        script(src='vendor/jquery/dist/jquery.js')